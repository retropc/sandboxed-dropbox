# replace USERNAME with your username first
[Unit]
description=dropbox
After=network.target

[Service]
# all but kill... and mknod... wish drop-cap=all and --cap interacted properly
ExecStart=/usr/bin/systemd-nspawn --drop-capability=CAP_CHOWN,CAP_DAC_OVERRIDE,CAP_DAC_READ_SEARCH,CAP_FOWNER,CAP_FSETID,CAP_IPC_OWNER,CAP_LEASE,CAP_LINUX_IMMUTABLE,CAP_NET_BIND_SERVICE,CAP_NET_BROADCAST,CAP_NET_RAW,CAP_SETGID,CAP_SETFCAP,CAP_SETPCAP,CAP_SETUID,CAP_SYS_ADMIN,CAP_SYS_CHROOT,CAP_SYS_NICE,CAP_SYS_PTRACE,CAP_SYS_TTY_CONFIG,CAP_SYS_RESOURCE,CAP_SYS_BOOT,CAP_AUDIT_WRITE,CAP_AUDIT_CONTROL,CAP_NET_ADMIN --bind-ro=/usr --bind-ro=/lib --bind-ro=/lib64 --bind-ro=/bin --bind=/home/USERNAME/Dropbox --bind=/home/USERNAME/.dropbox --bind=/home/USERNAME/.dropbox-dist -M dropbox -u USERNAME -D /var/lib/machines/dropbox/ /home/USERNAME/.dropbox-dist/dropboxd
## with X -- not recommended
##ExecStart=/usr/bin/systemd-nspawn --setenv=DISPLAY=:0.0 --drop-capability=CAP_CHOWN,CAP_DAC_OVERRIDE,CAP_DAC_READ_SEARCH,CAP_FOWNER,CAP_FSETID,CAP_IPC_OWNER,CAP_LEASE,CAP_LINUX_IMMUTABLE,CAP_NET_BIND_SERVICE,CAP_NET_BROADCAST,CAP_NET_RAW,CAP_SETGID,CAP_SETFCAP,CAP_SETPCAP,CAP_SETUID,CAP_SYS_ADMIN,CAP_SYS_CHROOT,CAP_SYS_NICE,CAP_SYS_PTRACE,CAP_SYS_TTY_CONFIG,CAP_SYS_RESOURCE,CAP_SYS_BOOT,CAP_AUDIT_WRITE,CAP_AUDIT_CONTROL,CAP_NET_ADMIN --bind-ro=/usr --bind-ro=/lib --bind-ro=/lib64 --bind-ro=/bin --bind=/home/USERNAME/Dropbox --bind=/home/USERNAME/.dropbox --bind=/tmp/.X11-unix --bind=/home/USERNAME/.dropbox-dist -M dropbox -u USERNAME -D /var/lib/machines/dropbox/ /home/USERNAME/.dropbox-dist/dropboxd

[Install]
WantedBy=multi-user.target
